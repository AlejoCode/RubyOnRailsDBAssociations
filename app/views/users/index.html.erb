<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-12">

      <h1>Private Posts</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>

            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Sign In As', user %></td>

            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New User', new_user_path %>
    </div>

  </div>
</div>