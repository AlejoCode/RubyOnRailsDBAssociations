<% provide(:title, "Log in") %>
<div class="container">

  <div class="row">
    <div class="col-12 text-center mt-4">
      <h1>Log in</h1>
    </div>

    <div class="col-2 col-lg-d-none"></div>
    <div class="col-8 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>

        <%= f.email_field :email, class: 'form-control mb-3' %>

        <div class="col-12 text-center">
          <%= f.submit "Log in", class: "btn btn-primary mt-3" %>
        </div>

      <% end %>
    </div>
    <div class="col-2 col-lg-d-none"></div>

  </div>
</div>
